@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg mt-5">
                <div class="card-body">
                    <h2 class="text-center mb-4">Login</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }

                    <form method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="LoginInput.UserName" class="form-label"></label>
                            <input asp-for="LoginInput.UserName" class="form-control" required>
                            <span asp-validation-for="LoginInput.UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LoginInput.UserPassword" class="form-label"></label>
                            <input asp-for="LoginInput.UserPassword" type="password" class="form-control" required>
                            <span asp-validation-for="LoginInput.UserPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap 5 form validation
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
} 